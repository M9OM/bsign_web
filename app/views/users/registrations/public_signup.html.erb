<div class="max-w-xl mx-auto px-2">
  <h1 class="text-3xl font-bold mb-6 text-center">Create Account</h1>

  <%= form_for @user, url: signup_path, html: { class: 'space-y-4' } do |f| %>
    <div class="form-control">
      <%= f.label :first_name, "First Name", class: 'label' %>
      <%= f.text_field :first_name, required: true, class: 'base-input' %>
    </div>

    <div class="form-control">
      <%= f.label :last_name, "Last Name", class: 'label' %>
      <%= f.text_field :last_name, required: true, class: 'base-input' %>
    </div>

    <div class="form-control">
      <%= f.label :email, "Email", class: 'label' %>
      <%= f.email_field :email, required: true, class: 'base-input' %>
    </div>

    <div class="form-control">
      <%= f.label :password, "Password", class: 'label' %>
      <%= f.password_field :password, required: true, class: 'base-input' %>
    </div>

    <div class="form-control">
      <%= f.submit "Sign Up", class: 'base-button w-full' %>
    </div>
  <% end %>
</div>
